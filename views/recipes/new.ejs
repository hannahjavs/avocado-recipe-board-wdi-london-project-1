<%# NEW    GET   /recipes/new    An empty form for the user

URL EXAMPLE:
8000/recipes/new%>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <form method="POST" action="/recipes">
        <div class="form-group">

          <label class="label">Name Of Recipe</label>
          <div class="control">
            <input class="input form-control" name="name" type="text" placeholder="Name" required>
          </div>
        </div>

      <div class="form-group">
        <label class="label">Recipe Type - Frozen, chopped, blended, smashed, baked..?</label>
        <div class="control">
          <input class="input form-control" name="recipeType" type="text" placeholder="Enter Recipe Type" required>
        </div>
      </div>

      <div class="form-group">
        <label class="label">Recipe Method</label>
        <div class="control">
          <textarea class="textarea form-control" name="method" placeholder="Please explain your recipe method" maxlength="800"></textarea>
        </div>
      </div>

      <div class="form-group">
        <label class="label">Image</label>
        <div class="control">
          <input class="input form-control" name="image" type="text" placeholder="Image" required>
        </div>
      </div>

      <div class="form-group">
        <label class="label">Ingredients</label>
        <div class="control">
          <textarea class="textarea form-control" name="ingredients" placeholder="Bullet point ingredients!" maxlength="800"></textarea>
        </div>

